def test_opal[TP](mpc: MPCEnv[TP], modulus: TP):
    taxid_path = f'tests/data/opal/A1.train.taxid'
    
    with open('tests/data/output/opal.txt') as f:
        dico, _ = load_dico(taxid_path)
        true_values = [int(dico[int(e.strip())]) for e in f]
        if mpc.pid == 0:
            result = offline_opal(True)
            accuracy, precision, recall = score_linear_classificator(result, true_values)
            print(f'Offline accuracy: {accuracy}. Offline precision: {precision}. Offline recall: {recall}')

