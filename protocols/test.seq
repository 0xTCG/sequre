from sequre.mpc.env import MPCEnv
from ..tests.test_all import test_all
from ..tests.test_lite import test_lite
from ..tests.benchmark import benchmark


def test_protocol[TP](mpc: MPCEnv[TP], test_run: bool, lite: bool):
    if test_run:
        benchmark(mpc)
    elif lite:
        test_lite[TP](mpc)
    else:
        test_all[TP](mpc)
